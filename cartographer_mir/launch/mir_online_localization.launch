<launch>
  <arg name="load_state_filename"/>
  <arg name="use_odom_enc" default="false"/>
  <arg name="rviz" default="true"/>
  <arg name="config_basename" default="mir_localization.lua"/>

  <node name="localization_node" pkg="cartographer_ros"
      type="cartographer_node" required="true" args="
          -configuration_directory $(find cartographer_mir)/configuration_files
          -configuration_basename $(arg config_basename)
          -load_state_filename $(arg load_state_filename)"
      output="screen">
    <remap from="scan_1" to="f_scan" />
    <remap from="scan_2" to="b_scan" />
    <remap from="imu" to="imu_data" />
    <remap from="ignore_odom" to="odom" if="$(arg use_odom_enc)"/>
    <remap from="odom" to="odom_enc" if="$(arg use_odom_enc)"/>
  </node>

  <node name="rviz" pkg="rviz" type="rviz" required="true"
      args="-d $(find cartographer_ros)/configuration_files/demo_2d.rviz" if="$(arg rviz)" />

</launch>
